{
  "name": "chor-playground",
  "version": "0.0.1",
  "description": "A playground for choreography development with TypeScript, Node and Express",
  "main": "dist/index.js",
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "babel ./src --out-dir dist --extensions \".ts,.tsx\" --source-maps",
    "serve": "node dist/index.js",
    "watch": "nodemon dist/index.js",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "author": {
    "name": "Jan Ladleif",
    "url": "https://github.com/jan-ladleif"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jan-ladleif/chor-playground"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
    "nodemon": "^1.18.11",
    "tslint": "^5.15.0",
    "typescript": "^3.4.3"
  },
  "dependencies": {
    "@types/express": "^4.16.1",
    "@types/bpmn-moddle": "^5.1.1",
    "@types/node": "^7.0.10",
    "bpmn-moddle": "^5.1.6",
    "express": "^4.16.4"
  }
}
